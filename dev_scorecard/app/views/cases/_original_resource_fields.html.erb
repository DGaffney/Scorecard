<div id="originalResourceFields" style="display:none;">
	<% f.fields_for(:original_resource, :url => resources_path, 
	                      :html => { :multipart => true}) do |f| -%>

	  <%= f.hidden_field :user_id, :value => current_user.id %>
	  <p>
	    <label for="resource">Upload an Image:</label>
	    <input id="resource_uploaded_data" name="resource[uploaded_data]" size="30" type="file" />
	  </p>
	  <p>
	    <%= submit_tag 'Change Image' %>
	  </p>
	<% end -%>

</div>