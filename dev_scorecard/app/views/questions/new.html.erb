<h1>New question</h1>

<% form_for(@question) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :survey %><br />
    <%= select("question", "survey_id", Survey.all.collect {|s| [ s.name, s.id ] }) %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= select("parent", "parent_id", Question.all.collect {|q| [ q.content, q.id ] }, {:include_blank => 'None'}) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', questions_path %>